const app = require('../server')
const database = require('../database')

database()
  .then(() => {
    app.listen({ port: process.env.SERVER_PORT }, () =>
      console.log(
        `Server ready at ${process.env.SERVER_ADDRESS}:${process.env.SERVER_PORT}/graphql`,
        `NODE_ENV=${process.env.NODE_ENV}`
      )
    )
  })
  .catch(err => {
    console.log(err)
  })
